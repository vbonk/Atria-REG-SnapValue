# .env.example - Updated with notification channels

# AI Configuration
PROVIDER_CHAIN=openai,gemini,anthropic,openrouter
AI_PROVIDER=openai            # Primary provider
OPENAI_API_KEY=
GEMINI_API_KEY=
ANTHROPIC_API_KEY=
OPENROUTER_API_KEY=
MAX_COST_USD_PER_REPORT=0.20
DAILY_COST_ALERT_USD=10

# Operational Alerts
SPEND_ALERT_CHANNEL=log       # log | email
OPS_ALERT_EMAIL=ops@example.com

# Rate Limiting
REPORTS_PER_HOUR=20
REPORTS_PER_DAY=40

# Database
DATABASE_URL=postgres://user:password@localhost:5432/snapvalue

# Storage
STORAGE_DRIVER=local          # local | s3
IMAGE_TTL_DAYS=30
PDF_TTL_DAYS=90
MAX_IMAGES=8
MAX_IMAGE_MB=10

# Notification Configuration
NOTIFIER_CHANNELS=email,webhook  # Comma-separated list: email, webhook

# Email Configuration - Google SMTP
EMAIL_PROVIDER=smtp           # smtp | resend
SMTP_USER=your-gmail@gmail.com
SMTP_PASS=your-app-password   # Generate at https://myaccount.google.com/apppasswords
LEAD_EMAIL=anne@velte.com     # Where to send lead notifications

# Webhook Configuration
WEBHOOK_URL=https://example.com/webhooks/leads
WEBHOOK_SECRET=optional-secret-for-verification

# Analytics
GA_MEASUREMENT_ID=G-PROD123
GA_MEASUREMENT_ID_STAGING=G-STAGE123

# Application
NODE_ENV=production           # staging | production
PORT=8080

# Monitoring
SENTRY_DSN=
CLEANUP_CRON_TIME=0 2 * * *   # 02:00 UTC daily

# Frontend URLs (for CORS)
FRONTEND_URL=https://snapvalue.agenttoolbox.ai
FRONTEND_URL_STAGING=https://staging.snapvalue.agenttoolbox.ai